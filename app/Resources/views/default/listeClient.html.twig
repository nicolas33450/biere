{% extends 'base.html.twig' %}

{% block title %}liste clients{% endblock %}


{% block body %}
{# {{dump(liste)}} #}
<div class="container">

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col"> id </th>
                <th scope="col"> nom </th>
                <th scope="col"> prenom </th>
                <th scope="col"> adresse </th>
                <th scope="col"> cp </th>
                <th scope="col"> ville </th>
                <th scope="col"> email </th>
                <th scope="col"> Modifier </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                {% for liste in liste %}
                <th scope="row">{{liste.id}}</th>
                <td>{{liste.nom}}</td>
                <td>{{liste.prenom}}</td>
                <td>{{liste.adresse}}</td>
                <td>{{liste.cp}}</td>
                <td>{{liste.ville}}</td>
                <td>{{liste.email}}</td>
                <td>
                    <form action="{{path("modifClient",{'id':liste.id})}}" method="GET">
                        <button class="btn btn-warning"> Modifier </button>
                    </form>
                </td>
                <td>
                    <form action="{{path("supClient",{'id':liste.id})}}" method="GET">
                        <button class="btn btn-danger"> Supprimer </button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block stylesheets %}
{{parent()}}
{% endblock %}